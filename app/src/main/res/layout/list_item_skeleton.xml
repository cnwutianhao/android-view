<?xml version="1.0" encoding="utf-8"?>
<com.tyhoo.android.view.widget.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_animation_duration="1200"
    app:shimmer_mask_width="1.0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:id="@+id/skeleton_img"
            android:layout_width="140dp"
            android:layout_height="105dp"
            android:layout_margin="8dp"
            android:background="@color/skeleton_light_transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/skeleton_title"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/skeleton_light_transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/skeleton_img"
            app:layout_constraintTop_toTopOf="@id/skeleton_img" />

        <View
            android:id="@+id/skeleton_category"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="@color/skeleton_light_transparent"
            app:layout_constraintBottom_toBottomOf="@id/skeleton_img"
            app:layout_constraintStart_toEndOf="@id/skeleton_img" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tyhoo.android.view.widget.ShimmerLayout>